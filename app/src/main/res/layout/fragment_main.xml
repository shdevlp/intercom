<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    android:background="@android:color/darker_gray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус Bluetooth: "
        android:id="@+id/tvBluetoothStatus"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ff363cff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ВЫКЛЮЧЕН"
        android:id="@+id/tvBluetoothStatusText"
        android:layout_alignTop="@+id/tvBluetoothStatus"
        android:layout_toRightOf="@+id/tvBluetoothStatus"
        android:autoText="false"
        android:textColor="#ffff1a12" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Включить Bluetooth"
        android:id="@+id/btnBluetoothOnOff"
        android:layout_below="@+id/tvBluetoothStatus"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поиск устройств"
        android:id="@+id/btnSearchDevices"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/btnBluetoothOnOff"
        android:layout_alignLeft="@+id/btnBluetoothOnOff"
        android:layout_alignStart="@+id/btnBluetoothOnOff"
        android:layout_alignRight="@+id/btnBluetoothOnOff"
        android:layout_alignEnd="@+id/btnBluetoothOnOff"
        android:enabled="false" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvDevices"
        android:layout_below="@+id/btnSearchDevices"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/btnDeciveConnect" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подключиться"
        android:id="@+id/btnDeciveConnect"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnSearchDevices"
        android:layout_alignStart="@+id/btnSearchDevices"
        android:layout_alignRight="@+id/btnSearchDevices"
        android:layout_alignEnd="@+id/btnSearchDevices"
        android:enabled="false" />

</RelativeLayout>
